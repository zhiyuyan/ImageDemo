<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.yzy.imagedemo.XmlDrawableDemoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_image_level"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <Button
            android:onClick="next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Next"/>

        <ImageView
            android:id="@+id/iv_image_transition"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_transition"/>

        <Button
            android:onClick="nextTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Next"/>

        <ImageView
            android:id="@+id/iv_image_clip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_clip"/>

        <Button
            android:onClick="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Start"/>

    </LinearLayout>

</ScrollView>